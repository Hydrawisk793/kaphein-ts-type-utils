{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "allowJs": false,
        "jsx": "preserve",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "**/node_modules/*"
    ]
}
